---
permalink: "rss.xml"
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
{% set englishPosts = blogPosts.english | default([]) %}
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>Fures Blog</title>
    <link>https://fures.at/blog</link>
    <atom:link href="https://fures.at/rss.xml" rel="self" type="application/rss+xml" />
    <description>Daily artificial intelligence, tourism technology, and automation roundups from Fures.</description>
    <language>en</language>
    {% if englishPosts | length %}
    <lastBuildDate>{{ englishPosts[0].date | rssDate }}</lastBuildDate>
    {% endif %}
    <generator>Eleventy</generator>
    {% for post in englishPosts %}
    <item>
      <title>{{ post.title | escape }}</title>
      <link>{{ post.url }}</link>
      <guid isPermaLink="true">{{ post.url }}</guid>
      <pubDate>{{ post.date | rssDate }}</pubDate>
      <description>{{ (post.excerpt ~ " — Read more: " ~ post.url ~ " — Explore Fures: https://fures.at") | escape }}</description>
      <content:encoded><![CDATA[
        {{ post.content | markdown | striptags | trim }}
        Read more: {{ post.url }}
        Explore Fures: https://fures.at
]]></content:encoded>
    </item>
    {% endfor %}
  </channel>
</rss>
